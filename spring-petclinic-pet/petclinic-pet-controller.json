{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"petclinicpet",
      "labels":{
         "app":"petclinicpet",
	 "role":"petapi"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"petclinicpet",
 	 "role":"petapi"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"petclinicpet",
	       "role":"petapi"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"petclinicpet",
                  "image":"rmajumder2019/spring-boot:2.1.0.BSNAP-PET-PET",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":8084
                     }
                  ]
               }
            ]
         }
      }
   }
}
