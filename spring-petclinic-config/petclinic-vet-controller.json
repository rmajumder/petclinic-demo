{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"petclinicvet",
      "labels":{
         "app":"petclinicvet",
	 "role":"vetapi"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"petclinicvet",
 	 "role":"vetapi"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"petclinicvet",
	       "role":"vetapi"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"petclinicvet",
                  "image":"rmajumder2019/spring-boot:2.1.0.BSNAP-PET-VET",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":8085
                     }
                  ]
               }
            ]
         }
      }
   }
}
